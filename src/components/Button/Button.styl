.button
  display flex
  align-items center
  gap 10px

  &__element
    padding 10px 20px
    font-size 16px
    color white
    background-color orange
    border none
    border-radius 8px
    cursor pointer
    transition background-color 0.3s ease

    &:hover
      background-color darkorange

    &:disabled
      background-color #ccc
      cursor not-allowed

  img
    width 20px
    height 20px